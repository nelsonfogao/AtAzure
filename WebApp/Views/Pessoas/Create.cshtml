@model WebApp.Models.Pessoas.CriarPessoaViewModel

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>

<h4>Pessoa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="invalid"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="invalid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="invalid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="invalid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="invalid"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeNascimento" class="control-label"></label>
                <input asp-for="DataDeNascimento" class="form-control" />
                <span asp-validation-for="DataDeNascimento" class="invalid"></span>
            </div>
            <div class="form-group">
                <label for="ImgFoto" class="control-label"></label>
                <input type="file" name="ImgFoto" class="form-control" />
                <span validation-for="ImgFoto" class="invalid"></span>
            </div>
            <div class="form-group">
                <label for="PaisId" class="control-label">Pais</label>
                <select name="PaisId" class="form-control" id="PaisId" multiple>
                    <option value="0">-</option>
                    @foreach (var pais in Model.Paises)
                    {
                        <option value="@pais.Id">@pais.Nome </option>
                    }
                </select>
                <span validation-for="PaisId" class="invalid"></span>
            </div>
            <div class="form-group">
                <label for="EstadoId" class="control-label">Estado</label>
                <select name="EstadoId" class="form-control" id="EstadoId" multiple>
                    <option value="0">-</option>
                    @foreach (var estado in Model.Estados)
                    {
                        <option value="@estado.Id">@estado.Nome </option>
                    }
                </select>
                <span validation-for="PaisId" class="invalid"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
